# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./jobs.db

# CORS Configuration (comma-separated list of allowed origins)
# Supports both HTTP and HTTPS for development
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Application Settings
DEBUG=True

# URLs Configuration
# For development with HTTP
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# For development with HTTPS (after setting up certificates)
# BACKEND_URL=https://localhost:8000
# FRONTEND_URL=https://localhost:3000

# For production (use your actual domains)
# BACKEND_URL=https://api.your-domain.com
# FRONTEND_URL=https://your-domain.com

# Secret key for JWT tokens and session management
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Secret Key (REQUIRED for production)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# API Settings
API_V1_PREFIX=/api

# OAuth 2.0 Configuration
# Get credentials from:
# - Google: https://console.cloud.google.com/
# - GitHub: https://github.com/settings/developers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OAuth Redirect URI (must match OAuth provider settings)
# For development with HTTP
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# For development with HTTPS (after setting up certificates)
# OAUTH_REDIRECT_URI=https://localhost:3000/auth/callback

# For production (use your actual domain)
# OAUTH_REDIRECT_URI=https://your-domain.com/auth/callback

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
# For production, use Redis: redis://localhost:6379
# For development, use in-memory: memory://
RATE_LIMIT_STORAGE_URI=memory://
LOGIN_RATE_LIMIT=5/minute
REGISTER_RATE_LIMIT=3/minute
PASSWORD_RESET_RATE_LIMIT=3/hour
API_RATE_LIMIT=100/minute
SEARCH_RATE_LIMIT=30/minute
